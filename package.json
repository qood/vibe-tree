{
  "name": "vibe-tree",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server/index.ts",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "cd frontend && bun run build",
