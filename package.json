    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.2.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
