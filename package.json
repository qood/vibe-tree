{
  "name": "vibe-tree",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "type": "module",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "bun run --watch src/server/index.ts",
    "dev:frontend": "bun --filter frontend dev",
    "build": "bun --filter frontend build",
    "test": "bun test",
    "test:frontend": "bun --filter frontend test",
    "test:all": "bun run test && bun --filter frontend test",
    "typecheck": "tsgo --noEmit && bun --filter frontend typecheck",
    "typecheck:tsc": "tsc --noEmit && bun --filter frontend typecheck",
    "frontend:dev": "bun --filter frontend dev",
    "frontend:build": "bun --filter frontend build",
    "frontend:test": "bun --filter frontend test",
    "frontend:lint": "bun --filter frontend lint",
    "frontend:preview": "bun --filter frontend preview",
    "frontend:typecheck": "bun --filter frontend typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.2.0",
    "better-sqlite3": "^12.5.0",
    "bun-pty": "^0.4.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@typescript/native-preview": "^7.0.0-dev.20260111.1",
    "bun-types": "latest",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.23.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
